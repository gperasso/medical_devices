<!DOCTYPE html>
<html>
  <head>
    <title>Medical Devices Data: Systems</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Systems Data</h1></a>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li><a href="/systems/<%=item._id%>"><%=item.name%></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No systems found.</div>
    <% } %>
    <div class="control">
      <h2>Search for systems by name</h2>
      <form method="get" action="/systems/">
        <label>Component name: <input name="name"></label>
        <button>Search</button>
      </form>
    </div>
    <div class="control">
      <h2>Search for components by status</h2>
      <form method="get" action="/components/">
        <label>Component name: <input name="status"></label>
        <button>Search</button>
      </form>
    </div>
    <div class="control">
      <h2>Search for components by Line</h2>
      <form method="get" action="/components/">
        <label>Component name: <input name="line"></label>
        <button>Search</button>
      </form>
    </div>
  </body>
</html>